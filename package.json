{
	"name": "shopper",
	"version": "0.1.0-dev.8",
	"description": "shopping cart ui for shopify stores",
	"keywords": [
		"cart",
		"shopper",
		"shopping",
		"shopping-cart",
		"ecommerce",
		"shopify"
	],
	"main": "dist",
	"types": "dist/index.d.ts",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"license": "ISC",
	"scripts": {
		"prepare": "run-s clean build test",
		"clean": "rimraf dist && mkdirp dist",
		"build": "run-s clean build-barrels && run-p build-pages build-scripts build-styles && echo ✔ done production build",
		"build:debug": "run-s clean build-barrels && run-p build-pages:debug build-scripts:debug build-styles:debug && echo ✔ done debug build",
		"build:debug+test": "run-s build:debug test",
		"build-barrels": "barrelsby --delete --exclude '(.*)\\.(bundle|test)\\.(.+)$' -d source",
		"build-pages": "pug --no-debug source -o dist",
		"build-pages:debug": "pug --pretty source -o dist",
		"build-scripts": "run-p build-typescript-lib build-bundle",
		"build-scripts:debug": "run-p build-typescript-lib:debug build-bundle:debug",
		"build-typescript-lib": "tsc",
		"build-typescript-lib:debug": "tsc --target es6",
		"build-bundle": "browserify source/shopper.bundle.ts -p [ tsify ] -g [ envify --NODE_ENV production ] -p uglifyify > dist/shopper.bundle.big.js && uglifyjs -cm < dist/shopper.bundle.big.js > dist/shopper.bundle.js",
		"build-bundle:debug": "browserify source/shopper.bundle.ts --debug -p [ tsify ] > dist/shopper.bundle.js",
		"build-styles": "sassbass --indir source --outdir dist",
		"build-styles:debug": "sassbass --indir source --outdir dist --sourcemap",
		"watch": "run-p watch-pages watch-styles",
		"watch-pages": "pug --watch --pretty source -o dist",
		"watch-styles": "sassbass --indir source --outdir dist --sourcemap --watch",
		"test": "jest --verbose --rootDir dist",
		"deploy": "./deploy.sh gh-pages",
		"start": "http-server ./dist"
	},
	"files": [
		"assets",
		"dist",
		"source",
		"index.html"
	],
	"jest": {
		"verbose": true,
		"testURL": "http://localhost/"
	},
	"peerDependencies": {
		"mobx": "4.*",
		"mobx-preact": "2.*",
		"preact": "8.*"
	},
	"dependencies": {
		"commotion": "0.0.0-dev.5",
		"crnc": "0.0.0-dev.12",
		"menutown": "0.0.0-dev.12",
		"omnistorage": "0.0.0-dev.10",
		"shopify-buy": "2.1.0"
	},
	"devDependencies": {
		"@types/jest": "24.0.7",
		"array.find": "1.0.9",
		"axx": "0.2.0",
		"barrelsby": "2.0.0",
		"browserify": "16.2.3",
		"commander": "2.19.0",
		"cross-env": "5.2.0",
		"envify": "4.1.0",
		"es6-promise": "4.2.6",
		"http-server": "0.11.1",
		"jest": "24.1.0",
		"mkdirp": "0.5.1",
		"mobx": "4.9.2",
		"mobx-preact": "2.0.0",
		"npm-run-all": "4.1.5",
		"preact": "8.4.2",
		"pug-cli": "1.0.0-alpha6",
		"rimraf": "2.6.3",
		"sassbass": "0.0.0-dev.4",
		"shelljs": "0.8.3",
		"tsify": "4.0.1",
		"typescript": "3.3.3333",
		"uglify-es": "3.3.9",
		"uglifyify": "5.0.1",
		"whatwg-fetch": "3.0.0"
	}
}
