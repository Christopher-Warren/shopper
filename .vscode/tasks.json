{
	"version": "0.1.0",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "production build (npm install)",
			"command": "npm",
			"args": ["install", "--silent"],
			"problemMatcher": ["$tsc"]
		},
		{
			"taskName": "debug build (node build --debug)",
			"isBuildCommand": true,
			"command": "node",
			"args": ["build", "--debug"],
			"problemMatcher": ["$tsc"],
		}
	]
}
